<odoo>
    <data>
        <record id="base.view_users_tree" model="ir.ui.view">
        <field name="name">res.user.inherit</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <tree string="Users" default_order="id asc">
                <field name="id"/>
                <field name="name"/>
                <field name="login"/>
                <field name="lang"/>
                <field name="login_date"/>
                <field name="remarks"/>
            </tree>
        </field>
    </record>
    </data>
</odoo>